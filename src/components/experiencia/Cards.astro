---
const { key, fecha, empresa, cargo, responsabilidades, logros } = Astro.props;
const isLeft = key % 2 === 0;
---
<section class="px-4 sm:px-6 my-8 md:hidden ">
    <article class={`${isLeft ? 'bg-gradient-to-br from-blue-700 to-blue-500 text-slate-100' : 'text-blue-700 '} p-4 rounded shadow-md`}>
        <p class="text-lg">{empresa}</p>
        <div class={`flex justify-between ${isLeft ? 'text-slate-100/80':'text-blue-700/60'}`}>
            <p>{cargo}</p>
            <p>{fecha}</p>
        </div>
        <hr class={`${isLeft ? 'bg-white/50':'bg-blue-700/60'} h-0.5`}/>
        <div class={`${isLeft ? '' : 'text-gray-900'}`}>
            <ul class="mt-2">
                <h4 class={`font-semibold  ${isLeft ? 'text-amber-500' : 'text-blue-700/80'} `}>Responsabilidades</h4>
                {responsabilidades.map((resp) => <li class=" font-light">- {resp.descripcion}</li>)}
            </ul>
            <ul class="mt-2 font-medium ">
                <h4 class={` font-semibold ${isLeft ? 'text-amber-500' : 'text-blue-700/80'}`}>Logros</h4>
                {logros.map((logro) => <li class=" font-light" > <span class="text-emerald-500">âœ”</span> {logro.descripcion}</li>)}
            </ul>
        </div>
    </article>
</section>
